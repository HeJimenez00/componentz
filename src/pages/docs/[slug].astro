---
import DocsLayout from "@layouts/DocsLayout.astro";
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";

export const getStaticPaths = (async () => {
  const docs = await getCollection("docs");

  const slug = docs.map((doc) => ({
    params: { slug: doc.slug },
    props: { doc: doc },
  }));

  return slug;
}) satisfies GetStaticPaths;

const { slug } = Astro.params;
const { doc } = Astro.props;

const frontmatter = doc.data;

console.log("Slug:", slug);
console.log("Frontmatter:", frontmatter.title.toLowerCase());

const { Content, headings } = await doc.render();
---

<DocsLayout
  title={frontmatter.title}
  description={frontmatter.description}
  headings={headings}
>
  {
    typeof slug === "string" &&
      typeof frontmatter.title === "string" &&
      slug !== "introduction" && (
        <>
          {console.log("Los valores son diferentes, mostrando el bloque")}
          <div class="space-x-1 text-small">
            <span>Docs</span>
            <span>&#47;</span>
            <span class="capitalize text-primary-400">{slug}</span>
          </div>
        </>
      )
  }
  <Content />
</DocsLayout>
