---
import Button from "@components/Button.astro";
import Grid from "@components/Grid.astro";
import ProductCard from "@components/ProductCard.astro";
import Input from "@components/Input.astro";
import Switch from "@components/Switch.astro";
import Counter from "@components/Counter.astro";
import Spinner from "@components/Spinner.astro";
import MusicPlayer from "@components/MusicPlayer.astro";
import ImageParallax from "@components/ImageParallax.astro";
import Modal from "@components/Modal.astro";
import CollageImages from "@components/CollageImages.astro";
---

<section class="w-screen h-screen overflow-hidden relative">
  <div class="radial-gradient blur"></div>
  <div class="radial-gradient"></div>
  <div class="skew">
    <h1
      class="absolute z-20 top-1/2 left-1/2 -translate-y-[51%] -translate-x-1/2 text-h1 font-bold bg-gradient-to-tr from-secondary-600 to-secondary-200 inline-block text-transparent bg-clip-text leading-[1]"
    >
      Componentes <span class="block ml-40">Modernos</span>
    </h1>

    <ProductCard
      title="3D Dispersion"
      price="$3.99"
      description="Lazo rotación de vistoso curva vaso con dispersión, 3d representación."
      imageUrl="/images/image.jpg"
    />
    <div
      class="absolute z-20 top-[59.3%] left-[41.4%] -translate-y-1/2 -translate-x-1/2"
    >
      <Spinner />
    </div>
    <div
      class="absolute z-20 top-[78%] left-[54.5%] -translate-y-1/2 -translate-x-1/2"
    >
      <Counter className="text-h2 font-bold text-secondary-200" />
    </div>
    <div
      class="absolute z-20 top-[70%] left-[71%] -translate-y-1/2 -translate-x-1/2 shadow-[25px_25px_40px_05px_rgba(0,0,0,0.50);]"
    >
      <MusicPlayer />
    </div>
    <Button
      class="text-cta font-bold absolute z-20 top-[59.3%] left-[54%] -translate-x-1/2 -translate-y-1/2 bg-primary-400 text-secondary-200 px-4 py-2 rounded-lg shadow-[1px_1px_15px_1px_rgba(57,102,241,0.10);] shadow-primary-400"
    >
      Explorar componentes
    </Button>

    <div
      class="absolute top-[59.3%] left-[27%] z-20 -translate-x-1/2 -translate-y-1/2 flex flex-col drop-shadow-2xl"
    >
      <Switch />
    </div>
    <div
      class="absolute top-[33.5%] left-[44.5%] z-20 -translate-x-1/2 -translate-y-1/2 flex flex-col shadow-[25px_25px_40px_05px_rgba(0,0,0,0.50);]"
    >
      <Input />
    </div>

    <div
      class="absolute top-[19%] left-[59.7%] z-20 -translate-x-1/2 -translate-y-1/2 flex flex-col drop-shadow-[20px_14px_20px_rgba(0,0,0,0.5)]"
    >
      <ImageParallax />
    </div>
    <div
      class="absolute top-[53%] left-[73.6%] z-20 -translate-x-1/2 -translate-y-1/2 flex flex-col shadow-[25px_25px_40px_05px_rgba(0,0,0,0.50);]"
    >
      <Modal />
    </div>

    <div
      class="absolute top-[92%] left-[32.7%] z-20 -translate-x-1/2 -translate-y-1/2 flex flex-col shadow-[25px_25px_40px_05px_rgba(0,0,0,0.50);]"
    >
      <CollageImages />
    </div>

    <Grid />
  </div>
</section>

<style>
  .radial-gradient {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 20;
    background-image: radial-gradient(
      ellipse at center,
      transparent 50%,
      #0a0d19 100%
    );
    pointer-events: none;
    user-select: none;
    inset: 0;
  }
  .radial-gradient.blur {
    mask-image: radial-gradient(
      ellipse at center,
      transparent 40%,
      #0a0d19 100%
    );
    backdrop-filter: blur(1px);
  }
  .skew {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) skew(-25deg, 12deg) scale(0.8);
    --rotate: 0deg;
    --x: 0px;
    --y: 0px;
  }
</style>
